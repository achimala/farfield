# Security mode for app-server.
FARFIELD_AUTH_MODE=cloudflare-access

# Cloudflare Access app settings.
CF_ACCESS_TEAM_DOMAIN=your-team.cloudflareaccess.com
CF_ACCESS_AUDIENCE=replace-with-your-audience-tag

# Public origin used by browser clients.
FARFIELD_CORS_ORIGIN=https://farfield.example.com

# Disable debug endpoints for remote usage.
FARFIELD_DEBUG_API_ENABLED=false

# Optional: pin server bind for remote mode if needed.
# HOST=0.0.0.0
# PORT=4311
